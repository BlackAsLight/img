{
  "name": "@img/qoi",
  "version": "0.1.0",
  "exports": {
    ".": "./src/mod.ts",
    "./decoder-stream": "./src/decoder_stream.ts",
    "./encoder-stream": "./src/encoder_stream.ts"
  },
  "tasks": {
    "coverage": "deno coverage --html coverage/ && ./view_coverage.sh",
    "test": "deno test --parallel --coverage --clean",
    "ok": "deno fmt --check && deno lint && deno task test"
  },
  "fmt": {
    "exclude": ["coverage/", "**/.*"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "camelcase",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-console",
        "no-eval",
        "no-inferrable-types",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/bytes": "jsr:@std/bytes@^1.0.2",
    "@std/streams": "jsr:@std/streams@^1.0.6"
  }
}
